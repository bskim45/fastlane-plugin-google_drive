root = true

[*]
charset=utf-8
end_of_line=lf
indent_size=4
indent_style=space
insert_final_newline=true
trim_trailing_whitespaces=true
max_line_length = 80

[*.rb]
indent_size=2

[*.json]
indent_size=2

[{*.yml,*.yaml}]
indent_size=2

[*.sh]
indent_size=2

[*.md]
indent_size=2

[*.toml]
indent_size=2

[{Makefile,**.mk}]
indent_style = tab
